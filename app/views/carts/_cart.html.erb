
<h2><%= t('.title') %></h2>
<table>
<%= render(@cart.line_items) %>
    <tr class = 'total_line'>
      <td colspan="3">Total: </td>
      <td class = 'total_cell'><%= number_to_currency(@cart.total_price)%></td>
    </tr>

</table>
<br/>
<%= button_to t('.checkout'), new_order_path, method: :get, class: 'btn-default btn-xs' %>
<%= button_to t('.empty'), @cart, method: :delete, class: 'btn-default btn-xs',
              data: {confirm: 'Are you sure?'} %>
